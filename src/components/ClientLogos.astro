---
const clients = [
  'Aviator Nation',
  'Sunday Golf',
  'Paravel',
  'Rainier Watch',
  'Revolution Fibers',
];
---

<section class="bg-cream border-t border-black/[0.06]">
  <div
    class="max-w-site mx-auto px-6 md:px-12 py-10"
    data-sal="fade-up"
    data-sal-duration="500"
  >
    <p class="text-xs font-semibold tracking-[1.5px] uppercase text-gray-400 mb-5">
      Trusted by Shopify &amp; Shopify Plus brands
    </p>
    <div class="flex flex-wrap items-center gap-6 md:gap-12">
      {clients.map((name) => (
        <span class="text-base md:text-lg font-bold text-gray-500 tracking-tight">
          {name}
        </span>
      ))}
    </div>
  </div>
</section>
