  {
    client: 'Aviator Nation RIDE',
    type: 'Shopify Plus · Full Redesign',
    work: [
      'Led total website redesign',
      'Website overall',
      'Built custom metaobject features',
    ],
    url: 'https://aviatornationride.com',
    domain: 'aviatornationride.com',
    logoFile: 'aviator-nation-ride.svg',
  },
  {
    client: 'Aviator Nation',
    type: 'Shopify Plus · Theme & CRO',
    work: [
      'Regular theme maintenance',
      'Replaced apps like Rebuy with custom development & design',
      'Implemented CRO and UI improvements',
    ],
    url: 'https://aviatornation.com',
    domain: 'aviatornation.com',
    logoFile: 'aviator-nation.png',
  },
  {
    client: 'Sunday Golf',
    type: 'Shopify · Theme Customization',
    work: [
      'Shopify Theme Customizations',
      'UX and CRO improvements',
    ],
    url: 'https://sundaygolf.com',
    domain: 'sundaygolf.com',
    logoFile: 'sunday-golf.avif',
  },
  {
    client: 'Paravel',
    type: 'Shopify · Custom Features',
    work: [
      'Shopify Theme Customizations',
      'Built Product Tag feature',
      'Various bugfixes',
    ],
    // Site is no longer live — no screenshot available, logo-only card
    domain: 'tourparavel.com',
    logoFile: 'paravel.png',
    noScreenshot: true,
  },
  {
    client: 'Rainier Watch',
    type: 'Shopify · Custom Development',
    work: [
      'Custom branded backorder feature',
      'FOMO features (low stock indicator)',
      'Customized Shopify Theme',
    ],
    url: 'https://shop.rainierwatch.com',
    domain: 'rainierwatch.com',
    logoFile: 'rainier-watch.png',
  },
  {
    client: 'Revolution Fibers',
    type: 'Shopify · UX Optimization',
    work: [
      'Built custom product variant selector',
      'Improved UX and conversions',
    ],
    url: 'https://x.com/austriker27/status/1757889669231255935',
    domain: 'revolutionfibers.com',
    logoFile: 'revolution-fibers.avif',
  },
  {
    client: 'Live Like the Mountain Is Out Shop',
    type: 'Shopify · Full Build',
    work: [
      'Rapid Shopify storefront build',
      'Customized theme to be on brand',
      'Implemented CRO features',
    ],
    // Site no longer live — using archived screenshot, no outbound link
    domain: 'southsoundproud.org',
    logoFile: 'south-sound-proud.svg',
    screenshotFile: 'south-sound-proud.jpg',
  },
];
---

<section id="work" class="bg-gray-50">
  <div class="max-w-site mx-auto px-6 md:px-12 py-16 md:py-20">
    <h2
      class="font-serif text-3xl md:text-4xl mb-10"
      data-sal="fade-up"
      data-sal-duration="500"
    >
      Work
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project, i) => {
        // Use a local static screenshot if provided, otherwise hit the Microlink API
        const screenshotSrc = project.noScreenshot
          ? null
          : project.screenshotFile
            ? `/images/screenshots/${project.screenshotFile}`
            : `https://api.microlink.io/?url=https://${project.domain}&screenshot=true&meta=false&embed=screenshot.url`;
        // Local logo path — drop files in public/images/logos/ to activate
        const localLogoSrc = `/images/logos/${project.logoFile}`;
        // Clearbit logo API was shut down Dec 2025 — removed from fallback chain

        // If no URL, render as a plain div (no broken outbound link)
        const Tag = project.url ? 'a' : 'div';
        const linkProps = project.url
          ? { href: project.url, target: '_blank', rel: 'noopener noreferrer' }
          : {};

        return (
          <Tag
            {...linkProps}
            class="group border border-gray-200 rounded-xl overflow-hidden bg-white hover:shadow-md transition-shadow"
            data-sal="fade-up"
            data-sal-duration="500"
            data-sal-delay={String(i * 100)}
          >
            {/* Visual header: logo by default, screenshot on hover */}
            <div class="aspect-[16/10] bg-gradient-to-br from-gray-50 to-gray-100 relative overflow-hidden">

              {/* Screenshot layer — loads behind, reveals on hover (skipped if noScreenshot) */}
              {screenshotSrc && (
                <div class="absolute inset-0 z-0">
                  <img
                    src={screenshotSrc}
                    alt={`${project.client} website screenshot`}
                    class="w-full h-full object-cover object-top"
                    loading="eager"
                  />
                </div>
              )}

              {/* Logo layer — fades out on hover unless noScreenshot, then stays put */}
              <div class={`absolute inset-0 flex items-center justify-center z-10 bg-gradient-to-br from-gray-50 to-gray-100 ${screenshotSrc ? 'transition-opacity duration-300 group-hover:opacity-0' : ''}`}>
                <img
                  src={localLogoSrc}
                  alt={`${project.client} logo`}
                  class="max-w-[160px] max-h-[64px] w-auto object-contain"
                  loading="lazy"
                  onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='block';"
                />
                {/* Final fallback: client name as text */}
                <span class="font-serif text-xl text-forest/40 hidden">
                  {project.client}
                </span>
              </div>

            </div>

            <div class="p-6">
              <div class="flex items-start justify-between gap-2 mb-1">
                <h3 class="text-base font-bold group-hover:text-forest transition-colors">
                  {project.client}
                </h3>
                {!project.url && (
                  <span class="text-[10px] font-medium text-gray-400 border border-gray-200 rounded-full px-2 py-0.5 flex-shrink-0 mt-0.5">
                    Archived
                  </span>
                )}
              </div>
              <p class="text-sm text-gray-400 mb-3">{project.type}</p>
              <ul class="space-y-1">
                {project.work.map((item) => (
                  <li class="text-sm text-gray-600 flex items-start gap-2">
                    <span class="text-forest/50 mt-1.5 flex-shrink-0">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 12 12">
                        <circle cx="6" cy="6" r="2" />
                      </svg>
                    </span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </Tag>
        );
      })}
    </div>
  </div>
</section>
